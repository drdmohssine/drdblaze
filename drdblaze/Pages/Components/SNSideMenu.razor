

<div class="sn-side-menu"  style="width:@(SNMenuWidth)px;">
    <div class="brand-box">
        <img @onclick="ExpandCollapse"
            style="width:32px;height:32px;background-color:orange;border-radius:5px" />
        
        @if (Expanded)
        {
            <div style="margin-left:7px; color:white;">
                Project Name
            </div>
        }
           
        
       
    </div>

    @if (Expanded)
    {
        @SideMenuContent
    }


</div>

@code {
    int SNMenuWidth = 56;
    bool Expanded = false;

    [Parameter]
    public int ExpandWidth { get; set; }

    [Parameter]
    public RenderFragment? SideMenuContent { get; set; }

    private async Task ExpandCollapse()
    {

        if (Expanded)
        {
            SNMenuWidth = 56;

        }
        else
        {
            SNMenuWidth = ExpandWidth;
            await Task.Delay(400);

        }
       
        Expanded = !Expanded;
    }
}

